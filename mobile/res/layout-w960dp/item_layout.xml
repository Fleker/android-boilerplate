<?xml version="1.0" encoding="utf-8"?>
    <!--CardView-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:minWidth="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2sp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="2dp">
        <RelativeLayout
                android:id="@+id/card_whole"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
        <TextView
                android:id="@+id/head"
                android:textSize="20dp"
                android:textStyle="italic"
                android:text="Temperature Adj."
                android:textColor="@color/andyBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="0dp" />
        <TextView
                android:id="@+id/subhead"
                android:textSize="9dp"
                android:textColor="@color/darkgray2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adjusted_temperature"
                android:layout_below="@id/head"
                android:fontFamily="sans-serif"
                android:paddingLeft="15dp"
                android:paddingBottom="9dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:id="@+id/icon_wrapper"
                android:gravity="center"
                android:layout_below="@+id/subhead"
                android:layout_marginBottom="4dp"
                android:layout_height="32dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/nf_moon"
                    android:id="@+id/icon"
                    android:background="@drawable/iconsphere"
                    android:translationZ="2dp" />
            </LinearLayout>
        <GridLayout
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/icon_wrapper"
                android:background="@drawable/graph_base"
                android:focusableInTouchMode="false"
                android:columnCount="8"
                android:rowCount="2"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:minWidth="280dp">
                <TextView
                    android:id="@+id/t0"
                    android:text="70"
                    style="@style/grid_text"
                    />
                <TextView
                    android:id="@+id/t1"
                    android:text="74"
                    style="@style/grid_text"
                    />
                <TextView
                    android:id="@+id/t2"
                    android:text="76"
                    style="@style/grid_text"/>
                <TextView
                    android:id="@+id/t3"
                    android:text="78"
                    style="@style/grid_text"/>
                <TextView
                    android:id="@+id/t4"
                    android:text="78"
                    style="@style/grid_text"/>
                <TextView
                    android:id="@+id/t5"
                    android:text="78"
                    style="@style/grid_text"/>
                <TextView
                    android:id="@+id/t6"
                    android:text="78"
                    style="@style/grid_text"/>
                <TextView
                    android:id="@+id/t7"
                    android:text="78"
                    style="@style/grid_text"/>
                <TextView
                    android:text="Now"
                    style="@style/grid_time"
                    />
                <TextView
                    android:text="1 Hour"
                    style="@style/grid_time"
                    />
                <TextView
                    android:text="2 Hours"
                    style="@style/grid_time"
                    />
            <TextView
                    android:text="3 Hours"
                    style="@style/grid_time"
                    />
            <TextView
                    android:text="4 Hours"
                    style="@style/grid_time"
                    />
            <TextView
                    android:text="5 Hours"
                    style="@style/grid_time"
                    />
            <TextView
                    android:text="6 Hours"
                    style="@style/grid_time"
                    android:minWidth="40dp"/>
            <TextView
                    android:text="7 Hours"
                    style="@style/grid_time"
                    android:minWidth="40dp"/>
        </GridLayout>
        <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is going to get very hot."
                android:textColor="@color/black"
                android:layout_below="@id/graph"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:textSize="11dp"
                android:paddingBottom="16dp"
                android:paddingTop="24dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="\?"
                android:id="@+id/attribute_description"
                android:layout_below="@id/graph"
                android:background="@drawable/questionbg"
                android:layout_toRightOf="@id/hint"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textColor="#999"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>